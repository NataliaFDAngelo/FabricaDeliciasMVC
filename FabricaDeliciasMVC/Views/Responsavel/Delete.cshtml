@model FabricaDeliciasMVC.Models.Responsavel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Deletar cadastro da responsável</h3>

<p>Você realmente deseja deletar este cadastro? A exclusão é irreversível!</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdResponsavel)

        <div class="row">
            <div class="input-field col s8">
                <i class="material-icons prefix">person</i>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "active" })
            </div>
        </div>

        <div class="row center-align">
            <button class="btn waves-effect waves-light" type="submit" name="action" href="@Url.Action("Index", "Responsavel")">
                Voltar
                <i class="material-icons left">arrow_back</i>
            </button>
            <button class="btn waves-effect waves-light" type="submit" value="delete">
                Excluir
                <i class="material-icons right">delete</i>
            </button>

        </div>
    </div>
}

