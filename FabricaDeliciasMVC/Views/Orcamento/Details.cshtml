@model IEnumerable<FabricaDeliciasMVC.Models.Orcamento>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Orçamentos</h2>

<p>
    @Html.ActionLink("Cadastrar Orçamento", "Create", null, new { @class = "waves-effect waves-light btn" })
</p>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
    <table class="responsive-table striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdOrcamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsavel.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pagamento.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                Editar
            </th>
            <th>
                Excluir
            </th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdOrcamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tema.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsavel.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pagamento.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <a class="btn-floating btn-large waves-effect waves-light red" data-id="0" href="@Url.Action("Edit", "Orcamento", new {id=item.IdOrcamento })"><i class="material-icons">mode_edit</i></a>
                </td>
                <td>
                    <a id="excluirOrcamento" class="btn-floating btn-large waves-effect waves-light red" data-id="@item.IdOrcamento"><i class="material-icons">delete</i></a>
                </td>
            </tr>
        }

    </table>

}

<div id="modal" class="modal">
    <div class="modal-content">
        <h4>Você deseja excluir este orçamento?</h4>
        <p>Ao clicar no botão Confirmar, você não poderá reverter a exclusão.</p>
    </div>
    <div class="modal-footer">
        @Html.AntiForgeryToken()
        <button id="btnConfirmarExclusao" type="button" class="modal-action modal-close waves-effect waves-green btn-flat">Confirmar</button>
    </div>
</div>

<script type="text/javascript">
    var IdOrcamento
    $('excluirOrcamento').click(function () {
        IdOrcamento = $(this).attr('data-id');
        $('#modal').modal('open');
    });
    $('btnConfirmarExclusao').click(function () {
        var formulario = $('__AjaxAntiForgeryForm');
        var token = $('input[name="__RequestVerificationToken"]', formulario).val();

        $.ajax({
            url: 'Delete',
            type: 'post',
            data: {
                __RequestVerificationToken
                id: IdOrcamento
            },
            success: function () {
                return window.location.reload();
            }
        });
    });
</script>



